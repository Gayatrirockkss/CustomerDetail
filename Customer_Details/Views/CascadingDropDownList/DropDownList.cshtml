@model Customer_Details.Models.Location
@{
    ViewBag.Title = "DropDownList";
}

<h2>DropDownList</h2>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
Select Country:
<select id="country">
    @foreach(var cname in @Model.CountryName)
    {
    <option value=@cname.Value>@cname.Text</option>
    }
</select>
Select State:
<select id="state">
@foreach (var sname in @Model.StateName)
{
    <option value=@sname.Value>@sname.Text</option>
}
</select>

<script type="text/javascript">
    $("#country").change(function () {
        if ($(this).data('options') === undefined) {
            /*Taking an array of all options-2 and kind of embedding it on the select1*/
            $(this).data('options', $('#state option').clone());
        }
        var id = $(this).val();
        var options = $(this).data('options').filter('[value=' + id + ']');
        $('#state').html(options);
    });

</script>





